{
  "name": "proteu-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "yarn docker:services && yarn server:watch",
    "server:watch": "cross-env NODE_ENV=development tsc-watch --onSuccess \"node build/server.js\" --onFirstSuccess \"yarn codegen --watch\" --compiler typescript/bin/tsc",
    "server:debug": "yarn build && cross-env NODE_ENV=development  node --nolazy --inspect-brk=9229 build/server.js",
    "docker:services": "docker-compose up -d mongo redis",
    "seeds": "ts-node ./config/seeds.ts",
    "codegen": "graphql-codegen",
    "build": "tsc",
    "codecov": "codecov",
    "format": "prettier '**/*.{ts,js,json,yml,yaml,graphql}' '*.{ts,js,json,yml,yaml}'"
  },
  "dependencies": {
    "@brazilian-utils/validators": "0.1.9",
    "@google-cloud/pubsub": "0.30.1",
    "@graphql-modules/core": "0.7.7",
    "@graphql-modules/di": "0.7.7",
    "@sentry/node": "5.4.3",
    "aigle": "1.14.1",
    "apollo-server-fastify": "2.6.7",
    "argon2": "^0.26.1",
    "aws-sdk": "2.488.0",
    "bull": "3.10.0",
    "cuid": "2.1.6",
    "dataloader": "1.4.0",
    "date-fns": "^2.12.0",
    "fastify": "2.6.0",
    "fastify-cors": "2.1.3",
    "got": "9.6.0",
    "gql-query-builder": "^3.1.1",
    "graphql": "14.5.3",
    "graphql-extensions": "0.7.6",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "0.3.0",
    "jsonwebtoken": "8.5.1",
    "knex": "0.18.2",
    "mongoose": "5.6.3",
    "mongoose-lean-id": "0.2.0",
    "pino": "5.12.6",
    "pino-pretty": "3.2.0",
    "pm2": "3.5.1",
    "ramda": "0.26.1",
    "reflect-metadata": "0.1.13",
    "typegoose": "5.7.2",
    "typescript": "^3.7.5",
    "validator": "11.0.0",
    "yup": "0.27.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "1.3.1",
    "@graphql-codegen/cli": "1.3.1",
    "@graphql-codegen/typescript": "1.3.1",
    "@graphql-codegen/typescript-resolvers": "1.3.1",
    "@types/bull": "3.5.15",
    "@types/got": "9.6.0",
    "@types/graphql": "14.2.2",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/graphql-type-json": "0.3.0",
    "@types/jest": "24.0.15",
    "@types/jsonwebtoken": "8.3.2",
    "@types/mongoose": "5.5.7",
    "@types/node": "12.0.12",
    "@types/pino": "5.8.8",
    "@types/prettier": "^2.0.0",
    "@types/ramda": "0.26.15",
    "@types/sinon": "^7.0.13",
    "@types/validator": "10.11.1",
    "@types/yup": "0.26.20",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "apollo": "2.15.0",
    "codecov": "3.5.0",
    "cross-env": "5.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "gql-query-builder": "^3.1.1",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "jest-junit": "6.4.0",
    "lint-staged": "9.0.2",
    "mongo-seeding": "3.2.0",
    "prettier": "^2.0.5",
    "sinon": "^7.3.2",
    "ts-jest": "24.0.2",
    "tsc-watch": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,graphql,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
